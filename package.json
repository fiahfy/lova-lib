{
  "name": "lova-tool",
  "version": "1.0.0",
  "description": "Tools for Lord of Vermilion Arena",
  "keywords": [
    "OpenShift",
    "Node.js",
    "application",
    "openshift"
  ],
  "author": {
    "name": "fiahfy",
    "email": "d.fiahfy@gmail.com",
    "url": "http://fiahfy.blogspot.com/"
  },
  "homepage": "http://fiahfy.blogspot.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/fiahfy/lova-tool"
  },
  "engines": {
    "node": ">= 4.1.0",
    "npm": ">= 2.14.4"
  },
  "dependencies": {
    "cheerio-httpcli": "^0.3.3",
    "co": "^4.6.0",
    "commander": "^2.8.1",
    "koa": "^1.0.0",
    "koa-router": "^5.2.3",
    "koa-send": "^1.3.1",
    "koa-static": "^1.4.9",
    "lru-cache": "^2.7.0",
    "mongoose": "^4.1.8",
    "request": "^2.63.0",
    "winston": "^1.0.2",
    "xmlify": "^1.0.1"
  },
  "devDependencies": {
    "lwip": "git://github.com/kant2002/lwip.git#5f6a38c"
  },
  "bundleDependencies": [],
  "private": true,
  "scripts": {
    "start": "PWD=`pwd`; forever start -w --minUptime 1000 --spinSleepTime 1000 -a -l ${PWD}/tmp/forever/forever.log --watchDirectory ${PWD}/server/ server.js",
    "poststart": "mongod --fork --logpath /dev/null --dbpath tmp/mongodb/data",
    "prestop": "mongo admin --eval 'db.shutdownServer()' > /dev/null",
    "stop": "forever stop server.js",
    "tail": "forever logs -f server.js",
    "dump": "mongodump --host=127.0.0.1 --port=27017 -u admin -d lova -o tmp/mongodb/dump",
    "restore": "mongorestore --host=127.0.0.1 --port=27017 -d lova --drop tmp/mongodb/dump/lova"
  },
  "main": "server.js"
}
