{
  "name": "lova-tool",
  "version": "1.0.0",
  "description": "Tools for Lord of Vermilion Arena",
  "keywords": [
    "OpenShift",
    "Node.js",
    "application",
    "openshift"
  ],
  "author": {
    "name": "fiahfy",
    "email": "d.fiahfy@gmail.com",
    "url": "http://fiahfy.blogspot.com/"
  },
  "homepage": "http://fiahfy.blogspot.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/fiahfy/lova-tool"
  },
  "engines": {
    "node": ">= 0.6.0",
    "npm": ">= 1.0.0"
  },
  "browserify": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "angular": "./node_modules/angular/angular.js",
    "angular-route": "./node_modules/angular-route/angular-route.js"
  },
  "browserify-shim": {
    "jquery": {
      "exports": "$"
    },
    "angular": {
      "depends": "jquery",
      "exports": "angular"
    }
  },
  "dependencies": {
    "angular": "^1.4.6",
    "angular-route": "^1.4.7",
    "browserify": "^11.2.0",
    "browserify-shim": "^3.8.10",
    "cheerio-httpcli": "^0.3.3",
    "co": "^4.6.0",
    "commander": "^2.8.1",
    "gulp": "^3.9.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-tsd": "0.0.4",
    "gulp-typescript": "^2.9.0",
    "gulp-watch": "^4.3.5",
    "jquery": "^2.1.4",
    "koa": "^1.0.0",
    "koa-route": "^2.4.2",
    "koa-send": "^1.3.1",
    "koa-static": "^1.4.9",
    "mongoose": "^4.1.8",
    "request": "^2.63.0",
    "supervisor": "^0.8.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "devDependencies": {
    "lwip": "git://github.com/kant2002/lwip.git#5f6a38c"
  },
  "bundleDependencies": [],
  "private": true,
  "scripts": {
    "start": "PWD=`pwd`; forever start -w --minUptime 1000 --spinSleepTime 1000 -a -l ${PWD}/tmp/forever/forever.log server.js",
    "poststart": "mongod --fork --logpath /dev/null --dbpath tmp/mongodb/data",
    "prestop": "mongo admin --eval 'db.shutdownServer()' > /dev/null",
    "stop": "forever stop server.js",
    "tail": "forever logs -f server.js"
  },
  "main": "server.js"
}
